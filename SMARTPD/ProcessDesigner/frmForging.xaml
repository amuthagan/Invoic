                         Text="{Binding ActiveEntity.COST_CENT_CODE,UpdateSourceTrigger=PropertyChanged}">
                    </TextBlock>
                    <TextBlock Text="Machine Type :" Grid.Column="4" Grid.Row="1"  VerticalAlignment="Center"  HorizontalAlignment="Stretch" ></TextBlock>
