                            <Grid Grid.Column="0" Grid.Row="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"></RowDefinition>
                                    <RowDefinition Height="*"></RowDefinition>
                                </Grid.RowDefinitions>
                                <RadioButton Content="Special" Command="{Binding SpeicalClickCommand}"  IsChecked="{Binding Model_Rpd.Opt_Special}"  Margin="2,2,2,2" Grid.Column="0" Grid.Row="0"></RadioButton>
                                <RadioButton Content="Standard"  Command="{Binding StandardClickCommand}" IsChecked="{Binding Model_Rpd.Opt_Stand}" Margin="2,2,2,2" Grid.Column="0" Grid.Row="1"></RadioButton>
                            </Grid>
                        </GroupBox>
                        <GroupBox Header="Special Charact/." Grid.Row="2" Grid.Column="0" Margin="5,5,5,5">
                            <Grid Grid.Column="0" Grid.Row="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"></RowDefinition>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions >
                                    <ColumnDefinition ></ColumnDefinition>
                                    <ColumnDefinition ></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <RadioButton Content="Yes" Command="{Binding SpeicalGridClickCommandYes}" Margin="2,2,2,2" IsChecked="{Binding Model_Rpd.Opt_Special_Yes}"  Grid.Column="0" Grid.Row="0"></RadioButton>
                                <RadioButton Content="No" Command="{Binding SpeicalGridClickCommandNo}"  Margin="2,2,2,2" IsChecked="{Binding Model_Rpd.Opt_Special_No}"  Grid.Column="1" Grid.Row="0" ></RadioButton>
                            </Grid>
                        </GroupBox>
                        <TextBlock Text="Nature of Packing:" Visibility="{Binding LblPacking}"  TextAlignment="Right" Grid.Column="1" Margin="5,5,5,5"/>
                        <TextBox Tag="Please enter Nature of Packing " Grid.Column="2" Grid.Row="0" Width="300" HorizontalAlignment="Left" MaxLength="50" Visibility="{Binding TxtPacking}" local:FocusExtension.IsFocused="{Binding Focus_NATURE_PACKING}" Margin="2,2,2,2" Text="{Binding Model_Rpd.NATURE_PACKING, Mode=TwoWay ,UpdateSourceTrigger=PropertyChanged}" ></TextBox>

                        <Grid Grid.Column="1" Grid.Row="1" Grid.RowSpan="2" Grid.ColumnSpan="2">
                            <Grid.RowDefinitions>
                                <RowDefinition  Height="3*"></RowDefinition>
                                <RowDefinition ></RowDefinition>
                                <RowDefinition ></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions >
                                <ColumnDefinition ></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <toolKit:DataGrid Margin="5,0,0,0" RowHeaderWidth="20" Grid.Column="0" Visibility="{Binding GridVisible}" x:Name="rpdDataGrid"  CanUserAddRows="False" Grid.Row="0" Grid.RowSpan="2" Grid.ColumnSpan="2" ItemsSource="{Binding Model_Rpd.GridData, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" AutoGenerateColumns="False" >
                                <toolKit:DataGrid.InputBindings>
                                    <KeyBinding Key="Delete" Command="{Binding GridDeleteCommand}" CommandParameter="{Binding ElementName=rpdDataGrid, Path=SelectedItem}"/>
                                </toolKit:DataGrid.InputBindings>
                                <toolKit:DataGrid.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem Header="Delete Row" Command="{Binding GridDeleteCommand}" CommandParameter="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ContextMenu}}, Path=PlacementTarget.SelectedItem}" />
                                        <!--<MenuItem Header="Delete Row" Command="{Binding GridDeleteCommand}" CommandParameter="{Binding ElementName=rpdDataGrid, Path=SelectedItem}" />-->
                                    </ContextMenu>
                                </toolKit:DataGrid.ContextMenu>
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="RowEditEnding">
                                        <i:InvokeCommandAction  Command="{Binding RowEditEndingSubTypeCommand}" CommandParameter="{Binding ElementName=rpdDataGrid, Path=SelectedItem}"/>
                                    </i:EventTrigger>
                                    <i:EventTrigger EventName="CellEditEnding">
                                        <i:InvokeCommandAction  Command="{Binding GridLostFocus}" CommandParameter="{Binding ElementName=rpdDataGrid, Path=SelectedItem}"/>
                                    </i:EventTrigger>
                                    <!--<i:EventTrigger EventName="PreviewKeyDown">
                                        <i:InvokeCommandAction  Command="{Binding GridDeleteCommand}" CommandParameter="{Binding ElementName=rpdDataGrid, Path=SelectedItem}"/>
                                    </i:EventTrigger>-->
                                </i:Interaction.Triggers>
                                <toolKit:DataGrid.Columns>
                                    <toolKit:DataGridTextColumn IsReadOnly="True"   Header="S.NO" Binding="{ Binding SLNO, Mode=TwoWay  ,UpdateSourceTrigger=PropertyChanged}" Width="60">
                                    </toolKit:DataGridTextColumn>
                                    <toolKit:DataGridTextColumn   Binding="{Binding CHARACTERISTIC, Mode=TwoWay  ,UpdateSourceTrigger=PropertyChanged}" Width="150"  Header="Characteristic" >
                                        <toolKit:DataGridTextColumn.EditingElementStyle>
                                            <Style TargetType="{x:Type TextBox}">
                                                <Setter Property="MaxLength" Value="50"/>
                                                <Setter Property="ToolTip" Value="{Binding CHARACTERISTIC}" />
                                            </Style>
                                        </toolKit:DataGridTextColumn.EditingElementStyle>
                                    </toolKit:DataGridTextColumn>
                                    <toolKit:DataGridTextColumn  Binding="{Binding SEVERITY, Mode=TwoWay ,UpdateSourceTrigger=PropertyChanged }" Width="110"  Header="Severity" >
                                        <toolKit:DataGridTextColumn.EditingElementStyle>
                                            <Style TargetType="{x:Type TextBox}">
                                                <Setter Property="MaxLength" Value="2"/>
                                                <Setter Property="ToolTip" Value="{Binding SEVERITY }" />
                                                <Setter Property="Lookup:TextBoxIntsOnly.Mask" Value="UnSignedDec" ></Setter>
                                                <Setter Property="Lookup:TextBoxIntsOnly.IsFocused" Value="{Binding firstCell}" ></Setter>
                                            </Style>
                                        </toolKit:DataGridTextColumn.EditingElementStyle>
                                    </toolKit:DataGridTextColumn>
                                    <toolKit:DataGridTextColumn  Binding="{Binding CUSTOMER_EXP, Mode=TwoWay ,UpdateSourceTrigger=PropertyChanged }" Width="192"  Header="Customer Expectation" >
                                        <toolKit:DataGridTextColumn.EditingElementStyle>
                                            <Style TargetType="{x:Type TextBox}">
                                                <Setter Property="MaxLength" Value="50"/>
                                                <Setter Property="ToolTip" Value="{Binding CUSTOMER_EXP}" />
                                            </Style>
                                        </toolKit:DataGridTextColumn.EditingElementStyle>
                                    </toolKit:DataGridTextColumn>
                                </toolKit:DataGrid.Columns>
                            </toolKit:DataGrid>
                            <TextBlock Text="Severity rating : Between 5 to 10 " TextAlignment="Center" Grid.Column="1" Margin="5,5,5,5" Grid.Row="3" Grid.ColumnSpan="2"/>
                        </Grid>


                        <!--<DataGrid Grid.Column="1" Grid.Row="1" Grid.RowSpan="2" Grid.ColumnSpan="2" Margin="5,5,5,5"></DataGrid>-->


                        <TextBlock Text="Other Customer Specific requirement : " HorizontalAlignment="Right"  Grid.ColumnSpan="2" TextAlignment="Center" Grid.Column="0" Margin="5,5,5,5" Grid.Row="4"/>
                        <TextBox Tag="Please enter Other Customer Specific requirement " Grid.Column="2" MaxLength="200" Grid.Row="4" Text="{Binding Model_Rpd.OTHER_CUST_REQ,Mode=TwoWay  ,UpdateSourceTrigger=PropertyChanged}" Margin="2,2,2,2" Grid.ColumnSpan="3"  ></TextBox>
                        <Grid Grid.Column="3" Grid.Row="0" Grid.RowSpan="3" Margin="10,0,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="11*"></RowDefinition>
                                <RowDefinition Height="10*"></RowDefinition>
                                <RowDefinition Height="17*"></RowDefinition>
                                <RowDefinition Height="11*"></RowDefinition>
                                <RowDefinition Height="11*"></RowDefinition>
                                <RowDefinition Height="11*"></RowDefinition>
                                <RowDefinition Height="12*"></RowDefinition>
                            </Grid.RowDefinitions>
                            <TextBlock Text="Customer Expectations:(Example) " TextAlignment="Left" Grid.Column="0" Margin="5,5,5,5" Grid.Row="0"/>
                            <TextBlock Text="1.Submit FMEA with PPAP" TextAlignment="Left" Grid.Column="0" Margin="5,5,5,5" Grid.Row="1"/>
                            <TextBlock Text="2.SPC during prodn run and charts to be maintained" TextWrapping="Wrap" TextAlignment="Left" Grid.Column="0" Margin="5,5,5,5" Grid.Row="2"/>
                            <TextBlock Text="3.Initial capability > 2.0" TextAlignment="Left" Grid.Column="0" Margin="5,5,5,5" Grid.Row="3"/>
                            <TextBlock Text="4.Customer approval of control plan" TextAlignment="Left" Grid.Column="0" Margin="5,5,5,5" Grid.Row="4"/>
                            <TextBlock Text="5.100% Inspection  " TextAlignment="Left" Grid.Column="0" Margin="5,5,5,5" Grid.Row="5"/>
                            <TextBlock Text="6.Final Inspection required (Sampling)  " TextAlignment="Left" Grid.Column="0" Margin="5,5,5,5" Grid.Row="6"/>
                        </Grid>
                    </Grid>
                </GroupBox>
            </Grid>
        </Grid>
    </Border>
</UserControl>
